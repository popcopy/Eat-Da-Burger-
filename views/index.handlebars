{{!-- Setup the index.handlebars to have the template that Handlebars can render onto. --}}
<div class="container">

  <div class="jumbotron">
    <center><img src="assets/img/burger.jpg" alt="burger" width="450" height="300"></center>
  <h1><center><span class="fas fa-cheeseburger"></span>Burger Time!</center></h1>
    <br>
    <h2>Make a Burger</h2>
    <panel>
      <form class="create-form">
        <div class="form-group">
          <label for="newburger">New Burger:</label>
          <input type="text" id="newburger" name="burger">
          {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
          <button type="submit" class="btn btn-success" id="addburger"><span class="fa fa-thumbs-up"></span></button>
        </div>
      </form>
    </panel>
  </div><!-- /jumbotron -->
{{!-- fa fa-thumbs-up --}}
  <div class="row">
    <!-- Undevoured Burgers -->
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading"><strong>New Burgers</strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="eatburger btn btn-warning"  data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    <!-- Devoured Burgers -->
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" ><strong>Devoured Burgers</strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="trashburger btn btn-danger" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
            <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div><!-- /row -->

</div><!-- /container -->